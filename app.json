{
  "expo": {
    "name": "Swiftvision",
    "slug": "swiftvision",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/swiftvision-icon.png",
    "splash": {
      "image": "./assets/swiftvision-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera for face recognition attendance."
      }
    },
    "android": {
      "permissions": [
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/swiftvision-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.swiftvision"
    },
    "plugins": [
      "expo-camera"
    ],
    "web": {
      "favicon": "./assets/swiftvision-icon.png"
    }
  }
}
